<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".product.view.ProductDetailFragment"
    android:layout_marginTop="@dimen/top_margin_product_detail">
  
  <TextView
      android:id="@+id/textViewProductDetailTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      style="@style/titleScreenStyle"
      android:layout_marginStart="5dp"
      />
  
  <ImageView
      android:id="@+id/imageViewProductDetailImage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/textViewProductDetailTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="25dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      android:contentDescription="@string/imagedetail" />
  <TextView
      android:id="@+id/textViewProductDetailPrice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/imageViewProductDetailImage"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="8dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      style="@style/itemsProduct"
      />

  <TextView
      android:id="@+id/textViewProductDetailQuantity"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/textViewProductDetailPrice"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="8dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      style="@style/itemsProduct"
      />

  <TextView
      android:id="@+id/textViewProductDetailType"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/textViewProductDetailQuantity"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="8dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      style="@style/itemsProduct"
      />

  <ProgressBar
      android:id="@+id/progressBarProductDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
  <TextView
      android:id="@+id/textViewErrorProductDetail"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <Button
      android:id="@+id/buttonProductDetailTryAgain"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/textViewErrorProductDetail"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
  
</androidx.constraintlayout.widget.ConstraintLayout>